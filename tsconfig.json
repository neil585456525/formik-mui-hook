{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
        "example/**/*",
    ]
}